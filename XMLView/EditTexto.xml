<?xml version="1.0" encoding="UTF-8"?>
<view>
    <columns>
        <group name="data" numcolumns="12">
            <column name="idtexto" display="none" order="100">
                <widget type="text" fieldname="idtexto" />
            </column>
            <column name="group-name" order="120" >
                <widget type="autocomplete" fieldname="idgrupotexto" onclick="EditGrupoTexto" required="true">
                    <values source="grupostextos" fieldcode="idgrupotexto" fieldtitle="nombregrupo"/>
                </widget>
            </column>
            <column name="text-name" order="110">
                <widget type="text" fieldname="nombretexto" />
            </column>
            <column name="date" order="130">
                <widget type="date" fieldname="fecha" readonly="true" />
            </column>
        </group>
		<group name="notes" numcolumns="12">
			<column name="note" order="100">
                <widget type="textarea" fieldname="note" />
            </column>
		</group>
    </columns>
</view>
